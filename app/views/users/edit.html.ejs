<div class="hero-unit">
  <form id="user-form" class="form-horizontal" action="/users/<%= params.id %>?_method=PUT" method="POST">
    <fieldset>
      <legend>Editar o us√∫ario</legend>
      <% if(params.errors) { %>
      <div class="control-group">
        <ul>
        <% for(var err in params.errors) { %>
          <li><%= params.errors[err]; %></li>
        <% } %>
        </ul>
      </div>
      <% } %>
      <%= partial('_form', {user: user}); %>
      <div class="form-actions">
        <%- contentTag('input', 'Salvar', {type: 'submit', class: 'btn btn-primary'}) %>
        <%- contentTag('button', 'Excluir', {type: 'submit', formaction: '/users/' + params.id + '?_method=DELETE', formmethod: 'POST', class: 'btn btn-danger'}) %>
      </div>
    </fieldset>
  </form>
</div>
