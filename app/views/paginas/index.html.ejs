<div class="hero-unit">
  <h2>Páginas</h2>
  <%- linkTo('Criar nova página', addPaginaPath, {class: 'btn pull-right'}); %>
</div>

<div id="paginas-list">
<% if (paginas) { %>
<% for (var i = 0, ii = paginas.length; i < ii; i++) { %>
  <div class="row list-item" id="pagina-<%= paginas[i].id; %>">
    <div class="span8">
      <h3><%- linkTo(paginas[i].title, paginaPath(paginas[i].id)); %></h3>
    </div>
    <div class="span4">
      <h3><i class="icon-list-alt"></i><%= paginas[i].description; %></h3>
    </div>
  </div>
<% } %>
<% } %>
</div>