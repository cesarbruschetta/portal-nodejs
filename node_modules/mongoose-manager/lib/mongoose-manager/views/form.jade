h2 edit items / #{doc._id}

form(action="/admin/#{collection}/#{doc._id}", method="post")
  input(name='_method', value='PUT', type='hidden')
  each field in fields
    label= field.name
    br
    - if (field.type == 'string')
      input(type="text", name="#{collection}[#{field.name}]", value="#{doc[field.name]}")
    - if (field.type == 'text')
      textarea(name="#{collection}[#{field.name}]", rows="8")= doc[field.name]
    - if (field.type != 'text' && field.type != 'string')
      select(name="#{collection}[#{field.name}]")
        each ref in field.referenced
          - if (doc[field.name].toString() == ref._id.toString())
            option(value="#{ref._id}", selected="selected")= eval('ref.'+field.referred)
          - else
            option(value="#{ref._id}")= eval('ref.'+field.referred)
    p

  input.btn(type="submit", name="submit", value="Submit")
