h2
  a(href="/admin") collections
   /&nbsp;
  =collection

table.table
  thead
    tr
      th Sl.No.
      each field in fields
        th= field.name
      th Edit
      th Delete
  tbody
    - var i = 0
    each doc in docs
      tr
        td
          a(href="/admin/#{collection}/#{doc['_id']}")= ++i
          .
        each field in fields
          td= doc[field.name]
        td
          a(href="/admin/#{collection}/#{doc['_id']}/edit") edit
        td
          a(href="/admin/#{collection}/#{doc['_id']}/edit") delete
